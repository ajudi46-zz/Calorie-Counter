<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:layout_margin="5dp"
    android:focusable="false"
    android:focusableInTouchMode="false"
    android:focusedByDefault="false"
    android:descendantFocusability="blocksDescendants" >


    <TextView
        android:id="@+id/final_value"
        style="@style/Base.TextAppearance.AppCompat.Medium"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="0" />


    <TextView
        android:id="@+id/plusButton"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_toLeftOf="@+id/final_value"
        android:layout_toStartOf="@+id/final_value"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:text="+"
        android:textSize="18sp" />


    <TextView
        android:id="@+id/editTextItemValue"
        style="@style/Base.TextAppearance.AppCompat.Medium"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/plusButton"
        android:layout_toStartOf="@+id/plusButton"
        android:gravity="center"
        android:text="0"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/minusButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/editTextItemValue"
        android:layout_toStartOf="@+id/editTextItemValue"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:text="-"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/itemValue"
        style="@style/Base.TextAppearance.AppCompat.Medium"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:layout_toLeftOf="@+id/minusButton"
        android:layout_toStartOf="@+id/minusButton"
        android:gravity="center"
        android:text="0" />

    <TextView
        android:id="@+id/itemName"
        android:autoSizeTextType="uniform"
        style="@style/Base.TextAppearance.AppCompat.Medium"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/itemValue"
        android:layout_toStartOf="@+id/itemValue"
        android:gravity="center_vertical"
        android:paddingLeft="5dp"
        android:paddingStart="5dp"
        android:text="Item Name" />


</RelativeLayout>